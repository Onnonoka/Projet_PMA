<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <!-- Material design toolbar
         The toolbar should be on every screen -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:navigationIcon="@drawable/logo"
            />
        <!-- Border bottom with view because it's painfull with style
             it need to redefine ALL the material design default style -->
        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/seed"
            app:layout_constraintBottom_toBottomOf="@id/topAppBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        -->
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Body of the screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Body title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configScreenTitle"
            android:textColor="?colorPrimary"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textSize="30sp"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:layout_gravity="start"
            android:fontFamily="@font/maven_pro"
            android:textFontWeight="500"
            android:layout_margin="8dp"/>

        <!-- CPU card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:checkable="false"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:strokeColor="?attr/colorSecondaryContainer"
            android:layout_margin="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- card title -->
                <TextView
                    android:id="@+id/cpuCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cpu"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Quantity input text
                     should be 120dp width for TDP input text size -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quantityTextField"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/quantity"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cpuCardTitle"
                    app:layout_constraintStart_toStartOf="parent"  >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Core units input text -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/CoreUnitsTextField"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/core_units"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cpuCardTitle"
                    app:layout_constraintStart_toEndOf="@id/quantityTextField">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- tdp input text -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tdpTextField"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/tdp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/quantityTextField"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Architecture input text -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ArchTextField"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/arch"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@id/quantityTextField"
                    app:layout_constraintStart_toEndOf="@id/tdpTextField">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CPU scrolling menu -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Body title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cpu"
                android:textColor="?colorPrimary"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:fontFamily="@font/maven_pro"
                android:textFontWeight="500"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>